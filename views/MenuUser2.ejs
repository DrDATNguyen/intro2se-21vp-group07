          <div id="dash-content" class="dash-content">
              <div class="overview">
                  <div class="title">
                      <i class="uil uil-tachometer-fast-alt"></i>
                      <span class="text">Dashboard</span>
                  </div>
  
                  <div class="boxes">
                      <div class="box box1">
                        <i class="far fa-wallet"></i>
                          <span class="text">Account Balance</span>
                          <span class="number">$<%= user.user_wallet%></span>
                      </div>
                      <!-- <div class="box box2">
                          <i class="uil uil-comments"></i>
