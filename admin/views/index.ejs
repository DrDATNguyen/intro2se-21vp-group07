                    <div class="card-body">
                      <h5 class="card-title">User Visits Analysis</h5>
                      <div id="userVisitsChart"></div>
                      <script>
                        document.addEventListener("DOMContentLoaded", async () => {
                          const chartContainer = document.querySelector("#userVisitsChart");
                          const chartMessage = document.createElement('p');
                          chartMessage.textContent = 'Fetching data...';
                          chartContainer.appendChild(chartMessage);
                  
                          try {
                            // Fetch user visit data from the server
                            const response = await fetch('/admin/getUserVisits'); // Change the URL accordingly
                            const userVisitsData = await response.json();
                  
                            if (userVisitsData.length === 0) {
                              chartMessage.textContent = 'No data available to render the chart.';
                            } else {
                              const timestamps = userVisitsData.map(entry => entry.timestamp);
                              const userVisits = userVisitsData.map(entry => entry.visits);
                  
                              new ApexCharts(
                                chartContainer,
                                {
                                  series: [
                                    {
                                      name: "User Visits",
                                      data: userVisits,
                                    },
                                  ],
                                  chart: {
                                    height: 350,
                                    type: "area",
                                  },
                                  xaxis: {
                                    type: "datetime",
                                    categories: timestamps,
                                  },
                                  tooltip: {
                                    x: {
                                      format: "dd/MM/yy",
                                    },
                                  },
                                }
                              ).render();
                  
                              chartMessage.textContent = ''; // Remove the message
                            }
                          } catch (error) {
                            console.error(error);
                            chartMessage.textContent = 'An error occurred while fetching data.';
                          }
                        });
                      </script>
