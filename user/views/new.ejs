<body>
    <h3>hello <%= users.username%></h3>
    <div class="container mt-5">
        <h1 class="mb-4 text-white">New Blog Post</h1>

        <form action="/blogs/new/<%=users._id %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title" class="text-white">Title</label>
                <input type="text" class="form-control" placeholder="Title" name="title" required>
            </div>

            <div class="form-group">
                <label for="author" class="text-white">Author</label>
                <input type="text" class="form-control" placeholder="Author" name="author" required>
            </div>

            <div class="form-group">
                <label for="introduction" class="text-white">Introduction</label>
                <textarea name="introduction" placeholder="Introduction" class="form-control"></textarea>
            </div>
            
            <div class="form-group">
                <label for="description" class="text-white">Description</label>
                <textarea name="description" placeholder="Description" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label for="image" class="text-white">Upload Image</label>
                <input type="file" name="image" id="image" class="form-control-file text-white">
            </div>
            
            <div class="form-group">
                <label for="tags" class="text-white">Tags (separated by commas)</label>
                <input type="text" class="form-control" placeholder="Tags" name="tags">
            </div>
            

            <% if(users.isUservip){ %>
                <div class="form-group">
                    <label for="price" class="text-white">Price</label>
                    <input type="text" name="price" id="price" class="form-control-file text-black" value="0">
                </div>
            <% } else { %>
                <div class="form-group">
                    <label for="price" class="text-white">Price</label>
                    <input type="hidden" name="price" id="price" class="form-control-file text-black" value="0">
                </div>

            <% } %>

            

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            <a href="/user/home" class="btn btn-secondary mt-3">Go Back</a>
        </form>
    </div>
    </body>

