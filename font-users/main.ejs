    <!----------------------------- Main Site Section ------------------------------>
    <main>
        <!-- --------------------- Blog Carousel ----------------- -->
        <section>
            <div class="blog">
                <div class="container">
                    <div class="owl-carousel owl-theme blog-post">
                        <% if(blogs.length<1){%>

                            <p class="text-white">No posts yet, create a new one</p>
                
                            <%  } %>
                
                            <% blogs.forEach(blog=>{ %>
                            
                        <% if(blog.isPremium){ %>
                        <div class="blog-content" data-aos="fade-right" data-aos-delay="200">
                            <img src="data:<%= blog.img.contentType %>;base64,<%= blog.img.data.toString('base64') %>" class="img" alt="...">
                            <div class="blog-title">
                                <h3><%= blog.title %></h3>
                                <button onclick="window.location.href = '/user/login';" class="btn btn-blog">Mua ngay</button>
                                  <span><%= blog.timeCreated.toLocaleDateString() %></span>
                            </div>
                        </div>     
                        <% }  %>    
                        <% }) %>         
                    </div>     
                    <div class="owl-navigation">
                        <span class="owl-nav-prev"><i class="fas fa-long-arrow-alt-left"></i></span>
                        <span class="owl-nav-next"><i class="fas fa-long-arrow-alt-right"></i></span>
                    </div>  
                </div>
            </div>
        </section>
        <!-- -----------x--------- Blog Carousel --------x-------- -->
         <!-- ---------------------- Site Content ------------------------ -->

         <section class="container">
            <div class="site-content">
            
                <div class="posts">
                    <% if(blogs.length<1){%>

                        <p class="text-white">No posts yet, create a new one</p>
            
                        <%  } %>
            
            
                        <% blogs.forEach(blog=>{ %>
                    <div class="post-content" data-aos="zoom-in" data-aos-delay="200"> 
                        <!-- hai thuộc tính "data-aos" và "data-aos-delay" để cung cấp hiệu ứng và sự trễ khi xuất hiện cho đối tượng này. -->
                        <div class="post-image">
                            <div>
                                <img src="data:<%= blog.img.contentType %>;base64,<%= blog.img.data.toString('base64') %>" class="img" alt="...">
                            </div>
                
                            <div class="post-info flex-row" onclick="window.location.href = '/user/login';">
                                <!-- &nbsp dùng tạo khoảng trắng giữa các phần tử hoặc các từ trong văn bảng -->
                                      
                                <span><i class="fas fa-user text-gray"></i>&nbsp;&nbsp;<%= blog.author %></span>
                                <span><i class="fas fa-calendar-alt text-gray"></i>&nbsp;&nbsp;<%= blog.timeCreated.toLocaleDateString() %></span>
                                <button class="btn-cmt">
                                    <span> <%= blog.comments.length %></span>
                                </button>
                            </div>
                        </div>
                        <div class="post-title">
                            <a href="/user/login"><%= blog.title %>
                            </a>
                            <p><%- blog.introduction %>
                            </p>
                            <button onclick="window.location.href = '/user/login';" class="btn post-btn">Read More &nbsp; <i class="fas fa-arrow-right"></i></button>
                        </div>
                    </div>
                    <% }) %>
                          

            <!-- --------------------------- Share ---------------------------------------- -->
           
                </div>
                <aside class="sidebar">
                    
                    <div class="popular-post">
                        <h2>Popular Post</h2>
                        <% if(popularblogs.length<1){%>

                            <p class="text-white">No posts yet, create a new one</p>
                
                            <%  } %>
                
                
                            <% popularblogs.forEach(blog=>{ %>
                        <div class="post-content" data-aos="flip-up" data-aos-delay="200">
                            <div class="post-image">
                                <div><a href="/blogs/<%=blog.slug %>">
                                        <img src="data:<%= blog.img.contentType %>;base64,<%= blog.img.data %>" class="img" alt="...">
                                    </a>
                                </div>
                                <div class="post-info flex-row">
                                    <span><i class="fas fa-calendar-alt text-gray"></i>&nbsp;&nbsp;<%= blog.timeCreated.toLocaleDateString() %></span>
                                    <span><%= blog.comments.length %> Comments</span>
                                </div>
                            </div>
                            <div class="post-title">
                                <a href="#">><%- blog.title %></a>
                            </div>
                        </div>
                        <% }) %>
           
                    
                </aside>
            </div>
        </section>
    </main>
    


